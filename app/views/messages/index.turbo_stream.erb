<%= turbo_stream.update "chat_room_messages_area" do %>
  <h2>Chat room: <%= @chat_room.name %></h2>

  <%= turbo_frame_tag "chat_room_user_count" do %>
    <p>users in this room:<%= @chat_room_users.size %></p>
  <% end %>

  <h3>Messages:</h3>
  <% @messages.each do |message| %>
    <%= render partial: 'messages/message', locals: { message: message } %>
  <% end %>

  <%= turbo_frame_tag "new_messages" %>

  <%= form_with(model: Message.new, url: chat_room_messages_path, remote: true ) do |f| %>
    <%= f.text_field :content %>
    <%= f.submit "Send" %>
  <% end %>
<% end %>
